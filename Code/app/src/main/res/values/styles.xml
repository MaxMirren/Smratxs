<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="SortsFAB" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/custom_fab_shape</item>
        <item name="android:src">@drawable/baseline_play_arrow_black_48dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">75dp</item>
    </style>

    <style name="SortsToolbarImgBtn" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/toolbar_icon_width_height_spacing</item>
        <item name="android:layout_height">@dimen/toolbar_icon_width_height_spacing</item>
        <item name="android:layout_marginEnd">@dimen/toolbar_icon_width_height_spacing</item>
    </style>

    <style name="SortsNavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/almostWhite</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/toolbar_height</item>
    </style>

    <style name="SortsNavigationViewHeaderTitle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/toolbar_icon_width_height_spacing</item>
    </style>

    <style name="SortsNavigationViewHeaderTitleIcon">
        <item name="android:layout_width">@dimen/toolbar_icon_width_height_spacing</item>
        <item name="android:layout_height">@dimen/toolbar_icon_width_height_spacing</item>
        <item name="android:layout_marginStart">@dimen/toolbar_icon_width_height_spacing</item>
        <item name="android:layout_marginEnd">@dimen/toolbar_icon_width_height_spacing</item>
        <item name="android:background">@drawable/baseline_info_black_48dp</item>
    </style>

    <style name="SortsAlgorithmName" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SortsAlgorithmDescription" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">45dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SortsCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/cardBackground</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">@dimen/elevation</item>
    </style>

    <style name="SortsCardViewTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/base_space</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>


</resources>
