<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.FragmentDescription">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >

        <com.maxm.algolearn.views.custom.FontFlexTextView
                android:id="@+id/f_desc_v_txt_description_title_desc"
                style="@style/SortsTitle"
                android:text="@string/f_desc_title_desc"
        />

        <com.maxm.algolearn.views.custom.JustifiedFontFlexTextView
                android:id="@+id/f_desc_v_txt_description"
                style="@style/SortsAlgorithmText"
                android:text="@string/def_algorithm_description"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
        />

        <com.maxm.algolearn.views.custom.FontFlexTextView
                android:id="@+id/f_desc_v_txt_description_title_characteristics"
                style="@style/SortsTitle"
                android:text="@string/f_desc_title_characteristics"
        />

        <com.maxm.algolearn.views.custom.JustifiedFontFlexTextView
                android:id="@+id/f_desc_v_txt_characteristics"
                style="@style/SortsAlgorithmText"
                android:text="@string/def_algorithm_description"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
        />

        <com.maxm.algolearn.views.custom.FontFlexTextView
                android:id="@+id/f_desc_v_txt_description_title_demo"
                style="@style/SortsTitle"
                android:text="@string/f_desc_title_demonstration"
        />

        <ImageView
                android:id="@+id/f_desc_v_img_demo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="@dimen/normal_space"
                android:layout_marginEnd="@dimen/normal_space"
        />

    </LinearLayout>
</ScrollView>