<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/normal_space"

>

    <TextView
            style="@style/TextViewDialog"
            android:text="@string/f_about_main_text"
    />

    <TextView
            style="@style/TextViewDialog"
            android:text="@string/f_about_version"
    />

    <TextView
            style="@style/TextViewDialog"
            android:text="@string/f_about_author"
            android:autoLink="email"
    />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/normal_space"
            android:paddingEnd="0dp"
    >

        <com.google.android.material.button.MaterialButton
                android:id="@+id/f_about_v_material_btn_rate"
                style="@style/MaterialButtonDialog"
                android:text="@string/f_about_btn_rate"
                android:layout_marginEnd="@dimen/normal_space"
                app:backgroundTint="@color/colorAccent"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/f_about_v_material_btn_close"
                style="@style/MaterialButtonDialog"
                android:text="@string/f_about_btn_close"
        />
    </LinearLayout>
</LinearLayout>