<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/navigation_view_header_background">

    <TextView
            android:id="@+id/a_m_nav_h_header"
            style="@style/SortsNavigationViewHeaderTitle"
            android:text="@string/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
    />

    <ImageButton
            android:id="@+id/a_m_nav_h_img_btn_info"
            android:contentDescription="@string/desc_a_m_nav_h_img_btn_info"
            style="@style/SortsNavigationViewHeaderTitleIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/a_m_nav_h_header"
            app:layout_constraintHorizontal_bias="1"
    />

</androidx.constraintlayout.widget.ConstraintLayout>